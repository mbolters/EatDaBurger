<h1>Burgers!</h1>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Let's Eat!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Eat?</label><br>
    <input type="radio" name="eaten" value="1" checked> I want to eat!<br>
    <input type="radio" name="eaten" value="0"> Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
