<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class = "container jumbotron text-center">
  <h1>Eat Da Burger!</h1>
</div>
<div class='container'>
  <div class='row'>
    <div class= 'col-md-6 text-center'>
      <h2>Let's Eat!</h2>
          <ul>
            {{#each burgers}}
              {{#if eaten}}
                {{> burgers/burger-block eat=false}}
              {{/if}}
            {{/each}}
          </ul>
      </div>

    <div class='col-md-6 text-center'>
      <h2>Burgers Eaten!</h2>
        <ul>
          {{#each burgers}}
            {{#unless eaten}}
              {{> burgers/burger-block eat=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
  </div>

<div class= 'col-md-12 text-center'>
  <h2>What kind of Burger do you want to eat?</h2>
    <form class="create-form">
        <div class="form-group">
          <label for="ca"></label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
        <div class="form-group">
          <label for="slee"></label><br>
          <input class = "invisible" type="radio" name="eaten" value="1" checked><br>
        </div>
    </form>
  </div>

